tr data-hook="products_row" id = spree_dom_id(sale_price) class = "spree-product-sale-price"
  td.align-center = sale_price.active? ? Spree.t('sale_prices.yes') : ''
  td = sale_price.display_price.to_html
  td = (l sale_price.start_at, :format => Spree.t('sale_prices.datetimepicker.format')) if sale_price.start_at
  td = (l sale_price.end_at, :format => Spree.t('sale_prices.datetimepicker.format')) if sale_price.end_at
  td.align-center = sale_price.enabled ? Spree.t('sale_prices.enabled') : Spree.t('sale_prices.disabled')
  td.actions
    = link_to_delete sale_price, {url: admin_product_sale_price_url(product, sale_price.id), no_text: true}
